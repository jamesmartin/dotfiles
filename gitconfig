[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  aa = add --all
  dc = diff --cached
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  branch-name = "!git rev-parse --abbrev-ref HEAD"

[color]
  branch = auto
  status = auto
  ui = auto

[core]
	excludesfile = ~/.gitignore
